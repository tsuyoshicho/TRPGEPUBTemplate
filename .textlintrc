{
  "plugins": {
    "@textlint/markdown": {
      "extensions": [".markdown", ".mdown", ".mkdn", ".mkd", ".md"]
    }
  },
  "rules": {
    "@proofdict/proofdict": false,
    "prh": {
      "rulePaths": ["./dict/prh.yml"]
    },
    "preset-japanese": {
      "sentence-length": false,
      "max-ten": {
        "max": 5
      },
      "no-mix-dearu-desumasu": false
    },
    "preset-ja-technical-writing": false,
    "preset-ja-spacing": {
      "ja-no-space-between-full-width": false
    },
    "general-novel-style-ja": {
      "chars_leading_paragraph": false
    }
  }
}
