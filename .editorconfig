root = true

# All
[*]
charset = utf-8
#end_of_line = lf
trim_trailing_whitespace = true
#以下はVimプラグインでは有効にならない
insert_final_newline = true

# Extension
[*.{md,adoc}]
trim_trailing_whitespace = false

[*.{css,scss,sass}]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 2

# File
# Git config files
[.git*]
charset = utf-8
#end_of_line = lf
indent_style = tab
tab_width = 2
